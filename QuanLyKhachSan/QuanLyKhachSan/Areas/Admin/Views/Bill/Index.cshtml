@model IEnumerable<QuanLyKhachSan.Areas.Admin.Models.Bill>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <br />
    <h2>Danh sách nhân viên</h2>
    <table class="table table-hover table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Payment.PayID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentTime)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Payment.PayID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Emp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrentTime)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.BillID })
                </td>
            </tr>
        }

    </table>
</div>