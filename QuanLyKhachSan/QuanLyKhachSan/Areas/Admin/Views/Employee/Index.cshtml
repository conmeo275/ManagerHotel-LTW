@model IEnumerable<QuanLyKhachSan.Areas.Admin.Models.Employee>

@{
    ViewBag.Title = "List Employee";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <br />
    <h2>Danh sách nhân viên</h2>

    <p>
        @Html.ActionLink("Thêm nhân viên", "Create")
    </p>
    <table class="table table-hover table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Role.RoleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpDayOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpImage)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Role.RoleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmpName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmpDayOfBirth)
                </td>
                <td>
                    <img style="width: 80px; height: 100px;" src="~/Assets/images/@Html.DisplayFor(modelItem => item.EmpImage)" />
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.EmpID }) |
                    @Html.ActionLink("Xem chi tiết", "Details", new { id = item.EmpID }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.EmpID })
                </td>
            </tr>
        }

    </table>
</div>