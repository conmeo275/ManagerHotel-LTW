@model QuanLyKhachSan.Areas.Admin.Models.Revervation

@{
    ViewBag.Title = "Thông tin phòng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <br />
    <center>
        <h2>Thông tin phòng @Model.Room.RoomName</h2>
    </center>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="form-group">
                <div class=" col-md-4">
                    @Html.ActionLink("Quay lại danh sách phòng", null, null, null, new { href = Request.UrlReferrer })
                </div>
            </div>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ReverID)
            <div class="form-group">
                @Html.LabelFor(model => model.InDateTime, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.InDateTime, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.InDateTime, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.GuestName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.GuestName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.GuestName, "", new { @class = "text-danger" })
                </div>
            </div>

            @Html.EditorFor(model => model.GuestPhone, new { htmlAttributes = new { @type = "hidden" } })
            @Html.EditorFor(model => model.GuestEmail, new { htmlAttributes = new { @type = "hidden" } })
            @Html.EditorFor(model => model.GuestCMND, new { htmlAttributes = new { @type = "hidden" } })

            <div class="form-group">
                @Html.LabelFor(model => model.Room.RoomName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.DropDownList("RoomId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.RoomId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class = "control-label col-md-2">Thêm dịch vụ</label>
                <div class="col-md-4">
                    <a class="form-group-icon" href="@Url.Action("Create","Service", new { id = Model.ReverID})"><i class="fas fa-plus-square"></i></a>
                </div>
            </div>


            <div class="form-group form-group-input">
                <div class="col-md-offset-2 col-md-4">
                    <a href="@Url.Action("Delete","Revervation", new { id = Model.ReverID})" class="btn btn-danger form-group-input-btn">Hủy đặt phòng</a>
                </div>
                <div class="col-md-offset-2 col-md-4 ">
                    <input type="submit" value="Lưu" class="btn btn-info form-group-input-btn" />
                </div>
            </div>
        </div>
    }
</div>
