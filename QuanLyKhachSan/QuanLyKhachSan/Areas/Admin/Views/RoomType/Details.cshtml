@model QuanLyKhachSan.Areas.Admin.Models.RoomType

@{
    ViewBag.Title = "Details Room";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <br />
    <h2>Thông tin chi tiết loại phòng</h2>

    <div class="form-horizontal">
        <div class="form-group">
            <div class=" col-md-4">
                @Html.ActionLink("Quay lại danh sách loại phòng", "Index")
            </div>
        </div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.TypeName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TypeName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TypeImage)
            </dt>

            <dd>
                <img style="height: 250px; width: auto;" src="~/Assets/images/@Html.DisplayFor(model => model.TypeImage)" />
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price) VNĐ
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Sửa thông tin", "Edit", new { id = Model.TypeID }, new { @class = "btn btn-info" })
    </p>
</div>