@model QuanLyKhachSan.Areas.Admin.Models.ServiceProduct

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <br />
    <h2>Xóa sản phẩm</h2>
    <div>
        <div class="form-group">
            <div class=" col-md-4">
                @Html.ActionLink("Quay lại danh sách", "Index")
            </div>
        </div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ProductName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProductName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ProductPrice)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProductPrice)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ProductImage)
            </dt>

            <dd>
                <img style="height: 150px; width: auto;" src="~/Assets/ProductImage/@Html.DisplayFor(model => model.ProductImage)" />
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <h3>Bạn có chắc chắn muốn xóa sản phẩm này?</h3>
                <input type="submit" value="Xóa" class="btn btn-danger" />
            </div>
        }
    </div>
</div>
