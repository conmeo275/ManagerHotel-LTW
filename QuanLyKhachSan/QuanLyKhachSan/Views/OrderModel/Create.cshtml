@model QuanLyKhachSan.Models.OrderModel

@{
    ViewBag.Title = "Đặt phòng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var guest = Session["User"] as QuanLyKhachSan.Models.UserAccount;
}

<div class="container container-custom">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2 class="container-header text-center text-uppercase text-secondary mb-0">Đặt phòng</h2>
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
            <div class="form-group form-group-input">
                <div class=" col-md-4">
                    <a href="@Url.Action("Room", "OrderModel")">Chọn loại phòng khác</a>
                </div>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.OrderRoom, "Phòng", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    <span>@ViewBag.TypeName</span>
                </div>
            </div>

            <div class="form-group">
                <label class = "control-label col-md-2">Giá </label>
                <div class="col-md-4">
                    <span>@ViewBag.Price VNĐ</span>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.UserAccount.FullName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    <span>@guest.FullName</span>
                    <input value="@guest.UserID" id="userid" name="userid" type="hidden" />
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CheckIn, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.CheckIn, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CheckIn, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CheckOut, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.CheckOut, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CheckOut, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group form-group-input">
                <div class="col-md-offset-2 col-md-4">
                    <input type="submit" value="Tạo" class="btn btn-info" />
                </div>
            </div>
        </div>
    }
</div>
