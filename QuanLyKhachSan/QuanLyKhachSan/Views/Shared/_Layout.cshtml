<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Mường Thanh Hotel - @ViewBag.Title</title>
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.12.1/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css" />

    @Styles.Render("~/Content/css")
    @{
        var guest = Session["User"] as QuanLyKhachSan.Models.UserAccount;
    }
</head>
<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg bg-secondary text-uppercase fixed-top" id="mainNav">
        <div class="container container-navbar">
            @Html.ActionLink("Mường Thanh Hotel", "Index", "Home", new { area = "" }, new { @class = "navbar-brand js-scroll-trigger" })<button class="navbar-toggler navbar-toggler-right text-uppercase font-weight-bold bg-primary text-white rounded" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">Menu <i class="fas fa-bars"></i></button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#portfolio">Nổi bật</a></li>
                    <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#about">Về chúng tôi</a></li>
                    @if (guest != null)
                    {
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded" href="@Url.Action("Room","OrderModel")">Đặt phòng</a>
                        </li>
                        <li class="nav-item mx-0 mx-lg-1">
                            <a class="nav-link py-3 px-0 px-lg-3 rounded" href="@Url.Action("Details","UserAccount",new { id = guest.UserID })">Chào @guest.FullName</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item mx-0 mx-lg-1">
                            @Html.ActionLink("Đặt phòng", "Login", "Authentication", new { area = "Admin" }, new { @class = "nav-link py-3 px-0 px-lg-3 rounded" })
                        </li>
                        <li class="nav-item mx-0 mx-lg-1">
                            @Html.ActionLink("Đăng nhập", "Login", "Authentication", new { area = "Admin" }, new { @class = "nav-link py-3 px-0 px-lg-3 rounded" })
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <!-- Masthead-->
    @RenderSection("Masthead", required: false)
    <!--Body-->
    @RenderBody()
    <!-- Special Section-->
    @RenderSection("Special", required: false)
    <!-- Contact Section-->
    @RenderSection("About", required: false)
    <!-- Footer-->
    <footer class="footer text-center">
        <div class="container">
            <div class="row">
                <!-- Footer Location-->
                <div class="col-lg-4 mb-5 mb-lg-0">
                    <h4 class="text-uppercase text-uppercase-cus mb-4">Tổng công ty</h4>
                    <p class="lead lead-cus mb-0">
                        Khách sạn Mường Thanh Grand Sài Gòn Centre <br />
                        Địa chỉ: Số 8A, Mạc Đĩnh Chi, phường Bến Nghé, Quận 1 , Thành Phố Hồ Chí Minh, Việt Nam<br />
                        Điện thoại: +84 283 827 9595<br />
                        Email: info@saigoncentre.muongthanh.vn
                    </p>
                </div>
                <!-- Footer About Text-->
                <div class="col-lg-4">
                    <h4 class="text-uppercase text-uppercase-cus mb-4">Các chi nhánh</h4>
                    <p class="lead lead-cus mb-0"> - Khách sạn Mường Thanh: Đường Tân Phú, Thành phố Nha Trang.<br /> HotLine: 090113113</p> <br />
                    <p class="lead lead-cus mb-0"> - Khách sạn Mường Thanh: Đường Lê Lợi, Thành phố Đà Lạt.<br /> HotLine: 090113113</p> <br />
                </div>
                <!-- Footer Social Icons-->
                <div class="col-lg-4 mb-5 mb-lg-0">
                    <h4 class="text-uppercase text-uppercase-cus mb-4">Liên hệ với chúng tôi</h4>
                    <a class="btn btn-outline-light btn-social mx-1" href="https://www.facebook.com/titote275/"><i class="fab fa-fw fa-facebook-f"></i></a><a class="btn btn-outline-light btn-social mx-1" href="https://www.facebook.com/titote275/"><i class="fab fa-fw fa-twitter"></i></a><a class="btn btn-outline-light btn-social mx-1" href="https://www.facebook.com/titote275/"><i class="fab fa-fw fa-linkedin-in"></i></a><a class="btn btn-outline-light btn-social mx-1" href="https://www.facebook.com/titote275/"><i class="fab fa-fw fa-dribbble"></i></a>
                </div>
            </div>
        </div>
    </footer>
    <!-- Copyright Section-->
    <section class="copyright py-4 text-center text-white">
        <div class="container"><small>Design by Thành Đạt - Hoàng Liên - Tân Khoa - Hữu Thạch</small></div>
    </section>
    <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes)-->
    <div class="scroll-to-top d-lg-none position-fixed">
        <a class="js-scroll-trigger d-block text-center text-white rounded" href="#page-top"><i class="fa fa-chevron-up"></i></a>
    </div>


    <!-- Bootstrap core JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <!-- Third party plugin JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    <!-- Contact form JS-->
    @Scripts.Render("~/bundlesA/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
